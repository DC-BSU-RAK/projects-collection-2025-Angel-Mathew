<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".traveljournal">

    <ImageView
        android:id="@+id/travelscreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pop_up_screen" />

    <Button
        android:id="@+id/closebtn2"
        android:layout_width="115dp"
        android:layout_height="51dp"
        android:backgroundTint="#6BFFFFFF"
        android:fontFamily="@font/leckerli_one"
        android:text="Close"
        android:textColor="#0D0C0C"
        android:textColorHighlight="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/travelscreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909" />

    <TextView
        android:id="@+id/content1"
        android:layout_width="245dp"
        android:layout_height="169dp"
        android:fontFamily="@font/leckerli_one"
        android:text="A travel journal is a document of a personâ€™s journey of travel experiences."
        android:textAlignment="center"
        android:textColor="#1A1818"
        android:textColorHighlight="#090909"
        android:textColorHint="#0F0E0E"
        android:textColorLink="#040404"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/closebtn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/travelscreen"
        app:layout_constraintVertical_bias="0.452" />

    <TextView
        android:id="@+id/pricetag2"
        android:layout_width="193dp"
        android:layout_height="31dp"
        android:fontFamily="@font/leckerli_one"
        android:text="price: Dhs 30.00"
        android:textColor="#141313"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/closebtn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content1"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/buy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#15500A0A"
        android:backgroundTint="#004D0808"
        android:fontFamily="@font/leckerli_one"
        android:text="Buy Now"
        android:textColor="#0B0B0B"
        android:textColorHighlight="#0F0E0E"
        app:layout_constraintBottom_toTopOf="@+id/closebtn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricetag2"
        app:layout_constraintVertical_bias="0.167" />
</androidx.constraintlayout.widget.ConstraintLayout>