<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gratitudejournal">

    <ImageView
        android:id="@+id/gratitudebg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pop_up_screen" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="293dp"
        android:layout_height="116dp"
        android:fontFamily="@font/leckerli_one"
        android:text="A gratitude Journal is written about everything you are thankful in life."
        android:textAlignment="center"
        android:textColor="#0B0B0B"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/gratitudebg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.677"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gratitudebg"
        app:layout_constraintVertical_bias="0.354" />

    <TextView
        android:id="@+id/pricetag5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leckerli_one"
        android:text=" price: 17.00"
        android:textColor="#0F0E0E"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gratitudebg"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gratitudebg"
        app:layout_constraintVertical_bias="0.515" />

    <Button
        android:id="@+id/buy5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#18FFFFFF"
        android:fontFamily="@font/leckerli_one"
        android:text="Buy Now"
        android:textColor="#1A1919"
        android:textColorHighlight="#0F0E0E"
        android:textColorHint="#181717"
        app:layout_constraintBottom_toBottomOf="@+id/gratitudebg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricetag5"
        app:layout_constraintVertical_bias="0.222" />

    <Button
        android:id="@+id/closebtn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#83F6F1F1"
        android:backgroundTint="#99FDFDFD"
        android:fontFamily="@font/leckerli_one"
        android:text="Close"
        android:textColor="#0B0B0B"
        android:textColorHighlight="#0D0C0C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/gratitudebg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />
</androidx.constraintlayout.widget.ConstraintLayout>